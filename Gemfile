source 'https://rubygems.org'

gemspec

gem 'rails', '~> 5.0.0'

group :test do
  gem 'coveralls', :require => false
  gem 'rack-test'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'simplecov', :require => false
  gem 'mocha'
end

group :development, :test do
  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-stack_explorer'
  gem 'pry-rails'
  gem 'pry-remote'
end
